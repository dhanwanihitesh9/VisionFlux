# VisionFlux Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# RTSP Camera URLs (comma-separated)
# Example: rtsp://admin:password@192.168.1.100:554/stream1,rtsp://admin:password@192.168.1.101:554/stream1
DEFAULT_RTSP_URLS=

# AI Model Configuration
AI_MODEL_NAME=openai/clip-vit-base-patch32
DETECTION_CONFIDENCE=0.7
YOLO_MODEL=yolov8n.pt

# Alert Configuration
EMAIL_ENABLED=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

WEBHOOK_URL=
ALERT_COOLDOWN=60

# Storage Configuration
SAVE_DETECTED_FRAMES=true
FRAMES_DIRECTORY=detected_frames
MAX_STORED_FRAMES=1000

# Processing Configuration
MAX_CONCURRENT_CAMERAS=4
FRAME_SKIP=1
CAMERA_TIMEOUT=30
FRAME_RATE=30
